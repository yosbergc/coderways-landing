---
const { title, description, picSrc } = Astro.props
---
<section class="card">
    <img src={picSrc} alt={title}>
    <h3>{title}</h3>
    <p>{description}</p>
</section>

<style>
    .card {
        margin-top: 20px;
        margin-bottom: 20px;
        padding: 20px;
        border-radius: 8px;
        transition: 0.3s ease-in-out;
    }
    .card h3 {
        margin-bottom: 10px;
        font-size: 1.2rem;
    }
    .card p {
        font-size: 1rem;
        color: #78736f;
        font-weight: 500;
    }
    .card:hover {
        background-color: rgb(240, 240, 240);
    }
</style>